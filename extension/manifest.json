{
  "manifest_version": 3,
  "name": "Gamba Code Claimer",
  "version": "1.0",
  "description": "Simple extension to claim promo codes on Gamba.com",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://gamba.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://gamba.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}